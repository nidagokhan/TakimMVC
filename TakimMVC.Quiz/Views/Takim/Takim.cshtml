@using TakimMVC.Quiz.DTO
@model List<TakimDTO>


<!DOCTYPE html>
<html>
<head>
    <title>Takım Listesi</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: center;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <<table>
        <thead>
            <tr>
                <th>Takım ID</th>
                <th>Takım Isim</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TakimID</td>
                    <td>@item.TakimIsim</td>
                    <td><a href="/Takim/TakimId/@item.TakimID">Detay Gör</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <form action="/Takim/AddTakim" method="get">
        <button type="submit">Yeni Takım Ekle</button>
    </form>
</body>
</html>
